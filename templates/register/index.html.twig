{% extends 'base.html.twig' %}

{% block title %}Inscritpion{% endblock %}

{% block body %}
<div class='container-list'>
    <h1 class='title'>Créer un compte</h1>
    {{ form_start(form, {'attr': {'class':'contact-form'}}) }}
    <div class='row'>
        <div class='col-md-6'>
            {{ form_label(form.firstname, 'Prénom', {'label_attr': {'class':'login'}}) }}
            {{ form_widget(form.firstname, {'attr': {'class':'form-control'}}) }}
            <div class='error'>
                {{ form_errors(form.firstname) }}
            </div>
        </div>
        <div class='col-md-6'>
            {{ form_label(form.lastname, 'Nom', {'label_attr': {'class':'login'}}) }}
            {{ form_widget(form.lastname, {'attr': {'class':'form-control'}}) }}
            <div class='error'>
                {{ form_errors(form.lastname) }}
            </div>
        </div>
        <div class='col-md-6'>
            {{ form_label(form.email, 'Email', {'label_attr': {'class':'email'}}) }}
            {{ form_widget(form.email, {'attr': {'id':'form-control'}}) }}
            <div class='error'>
                {{ form_errors(form.email) }}
            </div>
        </div>
        <div class='col-md-6'>
            {{ form_label(form.password.first, 'Mot de passe', {'label_attr': {'class':'password'}}) }}
            {{ form_widget(form.password.first, {'attr': {'id':'form-control'}}) }}
        </div>
        <div class='col-md-6'>
            {{ form_label(form.password.second, 'Confirmation mot de passe', {'label_attr': {'class':'confpswd'}}) }}
            {{ form_widget(form.password.second, {'attr': {'id':'form-control'}}) }}
        </div>
        <div class='error'>
            {{ form_errors(form.password.first) }}
            {{ form_errors(form.password.second) }}
        </div>
        <div class="col-md-12">
            {{ form_widget(form.submit, {'attr': {'class':'submit'}}) }}
        </div>
        {{ form_rest(form) }}
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}
