{% extends 'base.html.twig' %}

{% block title %}Mon compte - Tout Pour La Gratte{% endblock %}

{% block body %}
<div class='container-list'>
    <h1 class=title>Modifier mon mot de passe</h1>
    <a href="{{ path('account') }}">Retourner à mon compte</a>
    <hr>
    {% if notification %}
    <div class="alert alert-info">{{ notification }}</div>
    {% endif %}

{{ form_start(form, {'attr': {'class':'contact-form'}}) }}
    <div class='row'>
        <div class='col-md-6'>
            {{ form_label(form.firstname, 'Prénom', {'label_attr': {'class':'login'}}) }}
            {{ form_widget(form.firstname, {'attr': {'class':'form-control'}}) }}
        </div>
        <div class='col-md-6'>
            {{ form_label(form.lastname, 'Nom', {'label_attr': {'class':'login'}}) }}
            {{ form_widget(form.lastname, {'attr': {'class':'form-control'}}) }}
        </div>
        <div class='col-md-6'>
            {{ form_label(form.email, 'Email', {'label_attr': {'class':'email'}}) }}
            {{ form_widget(form.email, {'attr': {'id':'form-control'}}) }}
        </div>
        <div class='col-md-6'>
            {{ form_label(form.old_password, 'Ancien mot de passe', {'label_attr': {'class':'password'}}) }}
            {{ form_widget(form.old_password, {'attr': {'id':'form-control'}}) }}
        </div>
        <div class='col-md-6'>
            {{ form_label(form.new_password.first, 'Nouveau mot de passe', {'label_attr': {'class':'password'}}) }}
            {{ form_widget(form.new_password.first, {'attr': {'id':'form-control'}}) }}
        </div>
        <div class='col-md-6'>
            {{ form_label(form.new_password.second, 'Confirmation nouveau mot de passe', {'label_attr': {'class':'confpswd'}}) }}
            {{ form_widget(form.new_password.second, {'attr': {'id':'form-control'}}) }}
        </div>
        <div class='error'>
            {{ form_errors(form.new_password.first) }}
            {{ form_errors(form.new_password.second) }}
        </div>
        <div class="col-md-12">
            {{ form_widget(form.submit, {'attr': {'class':'submit'}}) }}
        </div>
        {{ form_rest(form) }}
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}