{% extends 'base.html.twig' %}

{% block title %}{{product.name}} - Tout Pour La Gratte{% endblock %}

{% block body %}
<div class='container-list'>
    <div class='row'>
        <div class='col-4 list'>
            <img src='../uploads/{{ product.illustration }}' alt='{{ product.name }}' class='img-fluid product-show'>
        </div>
        <div class='col-4 list'>
            <h3 class='title'>{{product.name}}</h3>
            <h3 class='title'>Prix: {{ (product.price / 100)|number_format(2, ',', ' ')}} â‚¬</h3>
            <h3 class='title'>Stock: {{ product.stock}}</h3>
            <br>
            <a href='{{ path('add_to_cart', {'id': product.id}) }}' type='submit' class='btn action'>Ajouter au panier</a>
        
        </div>
    </div>
    <hr>
    <h3 class='title'>Nos meilleurs ventes</h3>
    <div class='row'>
        {% for product in products %}
            <div class='col-xl-4 col-12 list'>
                {% include 'product/single_product.html.twig' %}
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}