{% extends 'base.html.twig' %}

{% block title %}Valider ma commande - Tout Pour La Gratte{% endblock %}

{% block body %}
<div class='container-list'>
    <h2 class='title'>Je passe ma commande</h2>
    <p>Choisissez vos préférences avant de passer votre commande</p>
    <div class='row'>
        <div class='col-md-6'>
            {% set formhtml %}
                {{ form_start(form, {action:path('order_recap')}) }}
                {{ form_label(form.addresses, 'Choisissez votre adresse de livraison') }}<br>
                <a href='{{ path('account_address_add') }}'>Ajouter un nouvelle adresse</a><br><br>
                {{ form_end(form) }}
            {% endset %}
            {{ formhtml|replace({'[br]' : '<br>'})|raw }}
        </div>
        <div class='col-md-6'>
            <h5 class='title'>Récap de ma commande</h5>
            <p>Retrouvez le récapitulatif de vos produits</p>
            <div id='order_summary'>
                {% for key,product in cart %}
                <div class='row {% if key > 0 %}mt-4{% endif %}'>
                    <div class='col-md-3'>
                        <img src='uploads/{{ product.product.illustration }}' alt='{{ product.product.name }}' height='100px'>
                    </div>
                    <div class='col-md-6 my-auto'>
                        {{ product.product.name }}
                    </div>
                    <div class='col-md-3 my-auto'>
                        X {{ product.quantity }}
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
