{% extends 'base.html.twig' %}

{% block title %}Nous contacter - Tout Pour La Gratte{% endblock %}

{% block body %}
<div class='container-list'>
    <div class='row'>
        <div class='col-md-4 info'>
            <strong>Tout Pour La Gratte</strong><hr>
            06.00.00.00.00<br>
            56 rue invisible, 69000 LYON<br>
            contact@toutpourlagratte.com<br>
        </div>
        <div class='col-md-8'>
        <h1 class='title'>Nous contacter</h1>
        {% if success %}
            <div class='alert notification'>{{ success }}</div>
            <hr>
        {% endif %}
            {{ form_start(form, {'attr': {'class':'contact-form'}}) }}
            <div class='row'>
                <div class='col-12'>
                    {{ form_label(form.firstname, 'Prénom', {'label_attr': {'class':'form-label'}}) }}
                    {{ form_widget(form.firstname, {'attr': {'class':'form-control', 'placeholder':'Votre prénom'}}) }}
                </div>
                <div class='col-12'>
                    {{ form_label(form.lastname, 'Nom', {'label_attr': {'class':'form-label'}}) }}
                    {{ form_widget(form.lastname, {'attr': {'class':'form-control', 'placeholder':'Votre nom'}}) }}
                </div>
                <div class='col-12'>
                    {{ form_label(form.email, 'Email', {'label_attr': {'class':'form-label'}}) }}
                    {{ form_widget(form.email, {'attr': {'class':'form-control', 'placeholder':'Votre email'}}) }}
                    <div class='error'>
                        {{ form_errors(form.email) }}
                    </div>
                </div>
                <div class='col-12'>
                    {{ form_label(form.content, 'Message', {'label_attr': {'class':'form-label'}}) }}
                    {{ form_widget(form.content, {'attr': {'class':'form-control contact-text', 'placeholder':'En quoi pouvons-nous vous aider?'}}) }}
                </div>
                <div class='col-12'>
                    {{ form_widget(form.submit, {'attr': {'class':'btn submit'}}) }}
                </div>
                {{ form_rest(form) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
